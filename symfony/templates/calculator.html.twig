{% extends 'base.html.twig' %}

{% block body %}
    <div class="link-home-container">
        <a class="link-home" href="{{ path('home')}}"><i class="fa fa-arrow-alt-circle-left"></i>back</a>
    </div>

    <div class="fluid-container d-flex align-items-center justify-content-center">
        <div class="container d-flex align-items-center justify-content-end">
            {{ form(form) }}
        </div>
        <div class="container" id="scene"></div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% if shape == 'triangle' %}
        {{ encore_entry_script_tags('triangle') }}
    {% elseif shape == 'circle' %}
        {{ encore_entry_script_tags('circle') }}
    {% endif %}
{% endblock %} 
